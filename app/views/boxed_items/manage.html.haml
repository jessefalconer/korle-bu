.content
  .header
    %h1.page-title Boxed Items
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Boxes", boxes_path
      %li
        = link_to @box.name, box_path(@box)
      %li.active Boxed Items
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#manage"} Manage
      %li
        %a{data: {toggle: "tab"}, href: "#search"} Search
      %li
        %a{data: {toggle: "tab"}, href: "#new"} New
    .row
      .col-xs-12
        %br
        .tab-content
          #manage.tab-pane.active.in
            = render "boxed_items/manage_form"

          #search.tab-pane.fade
            = render "boxed_items/search_form"

          #new.tab-pane.fade
            = render "boxed_items/add_new_form"
