.input-group.search.span12
  = hidden_field_tag :id, @box.id, id: "search-model-id"
  = hidden_field_tag :model, "Box", id: "search-model"
  .input-group
    = text_field_tag :search, params[:search], placeholder: "Begin typing or enter a search term...", class: "form-control", id: "search-params"
    %span.input-group-btn.span12#search-submit
      = submit_tag "Search", class: "btn btn-primary" do
        %i.fa.fa-search

