.content
  .header
    %h1.page-title Pallets
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Pallets", pallets_path
      %li.active= @pallet.name
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#view"} View
      %li
        %a{data: {toggle: "tab"}, href: "#edit"} Edit
    .row
      .col-md-4
        %br
        #myTabContent.tab-content
          #view.tab-pane.active.in
            = render partial: "form", locals: { no_edit: true, delete: true }

          #edit.tab-pane.fade
            = render partial: "form", locals: { no_edit: false, delete: false }

      .col-md-8
        %br
        .panel.panel-default
          %a.panel-heading{data: {toggle: "collapse"}, href: "#widget1container"}
            Boxes in this Pallet
          - if @pallet.boxes.any?
            #widget1container.collapse.in
              %table.table.table-bordered.table-striped
                %thead
                  %tr
                    %th Custom ID
                    %th Name
                    %th Status
                %tbody
                  - @pallet.boxes.each do |box|
                    %tr
                      %td= box.custom_uid
                      %td
                        = link_to box_path(box) do
                          = box.name
                      %td= box.status
          - else
            #widget1container.collapse.in.panel-body
              %h4 No boxes.
              = link_button("Add a Box", new_box_path, "pull-left")
        %br
        .panel.panel-default
          %a.panel-heading{data: {toggle: "collapse"}, href: "#widget1container"}
            Loose Items on this Pallet
          - if @pallet.palletized_items.any?
            #widget1container.collapse.in
              %table.table.table-bordered.table-striped
                %thead
                  %tr
                    %th Custom ID
                    %th Name
                    %th Status
                %tbody
                  - @pallet.palletized_items.each do |item|
                    %tr
                      %td= item.generated_name
                      %td= item.expiry_date
                      %td= item.quantity
          - else
            #widget1container.collapse.in.panel-body
              %h4 No items.
              = link_button("Add an Item", new_pallet_path, "pull-left")
