%button.btn.btn-primary{data: {target: "#change-password-modal", toggle: "modal"}}
  %span Change Password
  %i.fa.fa-user-shield
.modal.fade{id: "change-password-modal"}
  .modal-dialog
    .modal-content
      .modal-header
        %h5#assignmentModalLabel.modal-title Change Password
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"}  Ã—
      .modal-body#assignmentModalBody.margin-top
        .row.edit-modal-body
          = form_for @user, url: change_password_user_path do |f|
            .col-xs-12
              -if @user == current_user || current_user.admin?
                .form-group
                  %label New Password
                  = f.password_field :password, class: "form-control"
                .form-group
                  %label Confirm New Password
                  = f.password_field :password_confirmation, class: "form-control"

            .col-xs-12
              .btn-toolbar.list-toolbar
                = submit_button_responsive("Save")
