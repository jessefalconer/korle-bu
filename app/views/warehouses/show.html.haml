%br
.col-12.center
  = back_button(warehouses_path, "Warehouses")
  = delete_button(warehouse_path(@warehouse))
  = edit_button(edit_warehouse_path(@warehouse))

.col-12.center
  %table
    %caption= @warehouse.name
    %thead
      %tr
        %th{:scope => "col"} Name
        %th{:scope => "col"} City
        %th{:scope => "col"} Country
        %th{:scope => "col"} Status
        %th{:scope => "col"}
    %tbody
      %tr
        %td{"data-label" => "Name"}= @warehouse.name
        %td{"data-label" => "City"}= @warehouse.city
        %td{"data-label" => "Country"}= @warehouse.country
        %td{"data-label" => "Status"}= @warehouse.status
        %td{"data-label" => "Action"}
