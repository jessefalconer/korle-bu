.input-group.search.span12.padding-bottom-small
  = hidden_field_tag :compare_id, @item.id, {id: "compare-id", data: {similar_ids: @similar_items.pluck(:id)}}
  .input-group
    = text_field_tag :search, params[:search], placeholder: "Enter search term...", class: "form-control", id: "search-params"
    %span.input-group-btn.span12#reconcile-search-submit
      %a.btn.btn-primary.responsive-button
        %span Search
        %i.fa.fa-search

#search-results
