- @items.each do |item|
  %tr
    %td
      %p{data: {target: "#item-#{item.id}Modal", toggle: "modal"}}
        = item.generated_name
    %td.hidden-xs
      %p{data: {target: "#item-#{item.id}Modal", toggle: "modal"}}
        = item.category&.name || "N/A"
    %td
      = link_to item_instances_path(item) do
        %p.instances= item.packed_items.count

  = render partial: "layouts/item_edit_modal", locals: {item: item, redirect: "reconcile_unverified_path"}
