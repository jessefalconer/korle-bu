.content
  .header
    %h1.page-title Item Activity for #{@item.generated_name}
    %ul.breadcrumb
      %li
        = link_to index_path do
          Home
      %li.active Item Activity
  .main-content
    .row
      .col-xs-12
        .panel.panel-default
          %a.panel-heading.collapsed{data: {toggle: "collapse"}, href: "#boxed_items"}
            Boxed Items (#{@boxed_items.size})
          .collapse{id: "boxed_items"}
            %table.table.list
              %tbody
                %thead
                  %tr
                    %th Quantity
                    %th Name
                    %th
                    %th Container
                    %th Date
                - @boxed_items.each do |item|
                  %tr
                    %td
                      %p= item.quantity
                    %td
                      = link_to item_path(item.item_id) do
                        = item.generated_name
                    %td
                      %i.fa.fa-arrow-right
                    %td
                      = link_to box_path(item.box) do
                        = item.box.name
                    %td
                      %p= item.created_at.strftime("%Y-%m-%d")

