.content
  .header
    %h1.page-title Reconcile - Unverified
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li.active Reconcile - Unverified
  .main-content
    .row
      .col-xs-12
        - if @items.any?
          %h3 Unverified Items (#{Item.unverified.count})
          %p These items are unverified. Click on the item's row to start.
          = render partial: "items/search_form", locals: { path: "/unverified_item_search" }
          %table.table.table-striped.table-hover.link-rows
            %thead
              %tr
                %th Name
                %th.hidden-xs Category
                %th.hidden-xs Flagged
                %th Instances
            %tbody#search-results
              = render "unverified_table"

          = paginate @items

        - else
          %h4.text-center No items to verify.
