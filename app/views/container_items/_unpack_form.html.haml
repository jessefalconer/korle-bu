- if @container.container_items.with_inventory.none?
  %p No items to unpack.
- else
  .input-group.search.span12
    .input-group
      = text_field_tag :search, "", placeholder: "Quick filter an item by name...", class: "form-control", id: "quick-filter"
      %span.input-group-btn.span12
        %a{id: "quick-filter-submit"}
          .btn.btn-primary.pull-left
            %span Quick Filter
  - @container.container_items.with_inventory.each do |ci|
    = form_for :unpacking_event, url: container_container_item_container_unpacking_events_path(@container, ci) do |f|
      .row.inline-add-item
        .col-xs-12.manage-item-name
          %p #{ci.generated_name}
          %i.fa.fa-ellipsis-v
        .col-xs-12.manage-item-form.hidden
          .row
            .col-xs-6.col-lg-3
              .form-group
                = f.label :quantity
                = f.number_field :quantity, value: ci.remaining_quantity, class: "form-control", min: 1, id: "quantity-#{ci.id}"
            .col-xs-6.col-lg-3
              .form-group
                = f.label "Weight (g)"
                = f.number_field :weight, value: ci.remaining_weight, class: "form-control", id: "weight-#{ci.id}", placeholder: "grams"
            .col-xs-10.col-sm-8.col-lg-4
              .form-group
                = f.label "Notes"
                = f.text_field :notes, class: "form-control", id: "notes-#{ci.id}", placeholder: "Explanation"
            .col-xs-2.col-sm-4.col-lg-2
              .form-group
                %label &nbsp;
                .btn-toolbar.list-toolbar
                  = submit_button_responsive("Unpack", "pull-right")
