.content
  .header
    %h1.page-title Palletized Items
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Boxes", pallets_path
      %li
        = link_to @pallet.name, pallet_path(@pallet)
      %li.active Palletized Items
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#manage"} Manage
      %li
        %a{data: {toggle: "tab"}, href: "#search"} Search
      %li
        %a{data: {toggle: "tab"}, href: "#new"} New
    .row
      .col-xs-12
        %br
        .tab-content
          #manage.tab-pane.active.in
            = render "palletized_items/manage_form"

          #search.tab-pane.fade
            = render "palletized_items/search_form"

          #new.tab-pane.fade
            = render "palletized_items/add_new_form"
