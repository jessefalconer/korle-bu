.content
  .header
    %h1.page-title Box Items
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      = present(@box).breadcrumbs_item

  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#manage"} Manage
      %li
        %a{data: {toggle: "tab"}, href: "#search"} Search
      %li
        %a{data: {toggle: "tab"}, href: "#new"} New
    .row
      .col-xs-12
        %br
        .tab-content
          #manage.tab-pane.active.in
            = render "box_items/manage_form"

          #search.tab-pane.fade
            = render "box_items/search_form"

          #new.tab-pane.fade
            = render "box_items/add_new_form"
