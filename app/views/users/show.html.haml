.content
  .header
    %h1.page-title Users
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Users", users_path
      %li.active= @user.name
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#view"} View
      %li
        %a{data: {toggle: "tab"}, href: "#edit"} Edit
    .row
      #myTabContent.tab-content
        #view.tab-pane.active.in
          %br
          = render partial: "form", locals: { no_edit: true, delete: true, create_password: false }

        #edit.tab-pane.fade
          %br
          = render partial: "form", locals: { no_edit: false, delete: false, create_password: false }
