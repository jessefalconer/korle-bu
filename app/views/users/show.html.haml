.content
  .header
    %h1.page-title Users
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Users", users_path
      %li.active= @user.name
    = render partial: "layouts/jump_to_modal"
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#view"} View
      %li
        %a{data: {toggle: "tab"}, href: "#edit"} Edit

      - if current_user == @user || current_user.admin?
        %li
          %a{data: {toggle: "tab"}, href: "#change-password"} Change Password
    .row
      #myTabContent.tab-content
        #view.tab-pane.active.in
          %br
          .col-xs-12
            %h5.text-muted Name
            %h4= @user.name
            %hr
          .col-lg-3.col-sm-4.col-xs-6
            %h6.text-muted Email
            %h5= @user.email || "N/A"
          .col-lg-3.col-sm-4.col-xs-6
            %h6.text-muted Phone Number
            %h5= @user.phone || "N/A"
          .col-lg-3.col-sm-4.col-xs-6
            %h6.text-muted Role
            %h5= @user.role
          .col-lg-3.col-sm-4.col-xs-6
            %h6.text-muted Status
            %h5{style: "color: #{@user.active? ? "#02a556" : "#ff4d4d"}"}= @user.status
          .col-lg-3.col-sm-4.col-xs-6
            %h6.text-muted Warehouse
            %h5= @user.warehouse&.name || "N/A"
          .col-lg-3.col-sm-4.col-xs-6
            %h6.text-muted Created At
            %h5= @user.created_at.strftime("%Y-%m-%d")
          - if @user.notes.present?
            .col-xs-12
              %h6.text-muted Notes
              %h5= @user.notes

        #edit.tab-pane.fade
          %br
          = render partial: "form", locals: { create_password: false }

        - if current_user == @user || current_user.admin?
          #change-password.tab-pane.fade
            %br
            = render partial: "change_password"
