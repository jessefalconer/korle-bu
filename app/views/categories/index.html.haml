%br
.col-12.center
  = back_button(index_path)
  = link_button("Add a Category", new_category_path)
.col-12.center
  %table
    %caption Categories
    %thead
      %tr
        %th{:scope => "col"} Name
        %th{:scope => "col"} Description
        %th{:scope => "col"} Created By
        %th{:scope => "col"} Created At
        %th{:scope => "col"}
    %tbody
      - @categories.each do |category|
        %tr
          %td{"data-label" => "Name"}= category.name
          %td{"data-label" => "Description"}= category.description
          %td{"data-label" => "Created By"}= category.user.name
          %td{"data-label" => "Created At"}= category.created_at.strftime("%Y-%m-%d")
          %td{"data-label" => "Action"}
            = table_button("View", category_path(category))
