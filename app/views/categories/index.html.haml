.content
  .header
    %h1.page-title Categories
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li.active Categories
    = add_button(new_category_path, "Category", "fa-file-medical")
  .main-content
    %table.table.table-striped
      %thead
        %tr
          %th Name
          %th.hidden-xs Description
          %th.hidden-xs Created By
          %th.hidden-xs Created At
      %tbody
        - @categories.each do |category|
          %tr
            %td
              = link_to category_path(category) do
                = category.name
            %td.hidden-xs= category.description
            %td.hidden-xs= category.user.name
            %td.hidden-xs= category.created_at.strftime("%Y-%m-%d")

    = paginate @categories, window: 2
