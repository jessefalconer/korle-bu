.content
  .header
    %h1.page-title= @box.name
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      = present(@box).breadcrumbs

    = link_to box_manage_items_path(@box) do
      Manage or add items to this box.

  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#view"} View
      %li
        %a{data: {toggle: "tab"}, href: "#edit"} Edit
    .row
      .col-md-5
        %br
        .tab-content
          #view.tab-pane.active.in
            .row
              .col-xs-12
                %h5.text-muted Name
                %h4= @box.name
              - if @box.notes.present?
                .col-md-12
                  %h5.text-muted Notes
                  %h4= @box.notes
              .col-md-3.col-xs-6
                %h5.text-muted Custom ID
                %h4= @box.custom_uid
              .col-md-3.col-xs-6
                %h5.text-muted Status
                %h4= @box.status
              .col-md-3.col-xs-6
                %h5.text-muted Created By
                %h4= @box.user.name
              .col-md-3.col-xs-6
                %h5.text-muted Created At
                %h4= @box.created_at.strftime("%Y-%m-%d")

          #edit.tab-pane.fade
            = render partial: "form"

      .col-md-7
        %br
        - present(@box) do |box|
          .panel.panel-default
            %a.panel-heading{data: {toggle: "collapse"}, href: "#location"}
              Location Details
            #location.collapse.in
              %table.table.list
                %tbody
                  %tr
                    %td
                      %p Pallet
                    = box.pallet_location

                  %tr
                    %td
                      %p Container
                    = box.container_location
                  %tr
                    %td
                      %p Shipment
                    = box.shipment_location

        .panel.panel-default
          %a.panel-heading.collapsed{data: {toggle: "collapse"}, href: "#boxeditems"}
            Items in this Box (#{@box.boxed_items.size})
          - if @box.boxed_items.any?
            #boxeditems.collapse.in
              %table.table.table-bordered.table-striped
                %thead
                  %tr
                    %th Name
                    %th Expiry Date
                    %th Quantity
                %tbody
                  - @box.boxed_items.each do |bi|
                    %tr
                      %td
                        = link_to item_path(bi.item) do
                          = bi.generated_name
                      %td= bi.expiry_date&.strftime("%Y-%m-%d")
                      %td= bi.quantity
          - else
            #boxeditems.collapse.in.panel-body
              %h5 No items in this box.
