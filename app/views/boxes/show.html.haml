.content
  .header
    %h1.page-title Boxes
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Boxes", boxes_path
      %li.active= @box.name
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#view"} View
      %li
        %a{data: {toggle: "tab"}, href: "#edit"} Edit
      %li
        = link_to box_manage_items_path(@box) do
          Add Items
    .row
      .col-md-5
        %br
        .tab-content
          #view.tab-pane.active.in
            = render partial: "form", locals: { no_edit: true, delete: true }

          #edit.tab-pane.fade
            = render partial: "form", locals: { no_edit: false, delete: false }

      .col-md-7
        %br
        - present(@box) do |box|
          .panel.panel-default
            %a.panel-heading{data: {toggle: "collapse"}, href: "#location"}
              Location Details
            #location.collapse.in
              %table.table.list
                %tbody
                  %tr
                    %td
                      %p Pallet
                    = box.pallet_location

                  %tr
                    %td
                      %p Container
                    = box.container_location
                  %tr
                    %td
                      %p Shipment
                    = box.shipment_location

        .panel.panel-default
          %a.panel-heading.collapsed{data: {toggle: "collapse"}, href: "#boxeditems"}
            Items in this Box (#{@box.boxed_items.size})
          - if @box.boxed_items.any?
            #boxeditems.collapse.in
              %table.table.table-bordered.table-striped
                %thead
                  %tr
                    %th Name
                    %th Expiry Date
                    %th Quantity
                %tbody
                  - @box.boxed_items.each do |bi|
                    %tr
                      %td
                        = link_to item_path(bi.item) do
                          = bi.generated_name
                      %td= bi.expiry_date&.strftime("%Y-%m-%d")
                      %td= bi.quantity
          - else
            #boxeditems.collapse.in.panel-body
              %h5 Add items to this box from the tab.
