- if @pallet.pallet_items.with_events.none?
  %p No history.
- else
  .input-group.search.span12
    .input-group
      = text_field_tag :search, "", placeholder: "Quick filter an item by name...", class: "form-control", id: "quick-filter"
      %span.input-group-btn.span12
        %a{id: "quick-filter-submit"}
          .btn.btn-primary.pull-left
            %span Quick Filter
  - @pallet.pallet_items.with_events.each do |pi|
    .row.inline-add-item
      .col-xs-12.manage-item-name
        %p #{pi.generated_name}
        %i.fa.fa-ellipsis-v
      .col-xs-12.manage-item-form.hidden
        - pi.unpacking_events.order(:created_at).reverse_order.each do |event|
          %p
            â€¢ #{event.created_at.strftime("%Y-%m-%d")}:
            = link_to user_path(event.user) do
              = event.user.name
            removed #{event.quantity} #{event.quantity > 1 ? "items" : "item"}.
          - if event.notes
            %p= event.notes
          = delete_button(pallet_pallet_item_pallet_unpacking_event_path(@pallet, pi, event), "Are you sure?")
