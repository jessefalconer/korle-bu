.content
  .header
    %h1.page-title Items
    %ul.breadcrumb
      %li
        = link_to "Home", index_path
      %li
        = link_to "Items", items_path
      %li.active= @item.generated_name
    = link_button("Start Reconcile", reconcile_start_path(@item))
  .main-content
    %ul.nav.nav-tabs
      %li.active
        %a{data: {toggle: "tab"}, href: "#view"} View
      %li
        %a{data: {toggle: "tab"}, href: "#edit"} Edit
    .row
      #myTabContent.tab-content
        #view.tab-pane.active.in
          %br
          .col-xs-12
            %h5.text-muted Name
            %h4= @item.generated_name
          - if @item.notes.present?
            .col-xs-12
              %h5.text-muted Notes
              %h4= @item.notes
          .col-lg-3.col-sm-4.col-xs-6
            %h5.text-muted Category
            %h4{style: "color: #{@item.category.present? ? "#02a556" : "#ff4d4d"}"}= @item.category&.name || "N/A"
          .col-lg-3.col-sm-4.col-xs-6
            %h5.text-muted Verified
            %h4{style: "color: #{@item.verified ? "#02a556" : "#ff4d4d"}"}= @item.verified.to_s.capitalize
          .col-lg-3.col-sm-4.col-xs-6
            %h5.text-muted Flagged
            %h4{style: "color: #{@item.flagged ? "#ff4d4d" : "#02a556"}"}= @item.flagged.to_s.capitalize
          .col-lg-3.col-sm-4.col-xs-6
            %h5.text-muted Created By
            %h4= @item.user.name
          .col-lg-3.col-sm-4.col-xs-6
            %h5.text-muted Created At
            %h4= @item.created_at.strftime("%Y-%m-%d")
          .col-lg-3.col-sm-4.col-xs-6
            %h5.text-muted Instances
            - item_instances = Item.item_instances(@item)
            - if item_instances.positive?
              = link_to item_instances_path(@item) do
                %h4= item_instances
            - else
              %h4 0
          - if @item.photo.attached?
            .col-xs-12
              %h5.text-muted Attached Photo
              %img{src: url_for(@item.photo), style: "width: 100%;"}

        #edit.tab-pane.fade
          %br
          = render partial: "form"
